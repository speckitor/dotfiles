syntax on
set expandtab
autocmd FileType make setlocal noet
autocmd FileType xml setlocal ts=2 sw=2 
set ignorecase
set smartcase
set number
set relativenumber
set guioptions -=m
set guioptions -=T
set cursorline
set incsearch
set modeline
set hidden
set path+=**
set tags=tags;/
set autochdir
set clipboard=unnamedplus
set termguicolors
colorscheme unokai
set background=dark
